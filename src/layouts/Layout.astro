---
import "@fontsource/inter/variable-full.css";

import MobileNav from "@components/MobileNav.astro";
import Navbar from "@components/Navbar.astro";
import ThemeToggle from "@components/ThemeToggle.astro";
import { setCacheControl } from "@server/utils/response-util.js";

export interface Props {
	title: string;
}

const { title } = Astro.props;

setCacheControl(Astro, {
	maxAge: 604800,
	mustRevalidate: true,
	proxyRevalidate: true,
	public: true,
	sMaxAge: 604800,
	staleIfError: 86400,
	staleWhileRevalidate: 86400,
});
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="twitter:title" content="Luke Shay" />
		<meta
			name="twitter:description"
			content="Software Development Engineer at Amazon Web Services that enjoys building cutting-edge web apps with new technologies."
		/>
		<meta name="twitter:card" content="summary_large_image" />
		<meta property="og:locale" content="en_US" />
		<meta property="og:site_name" content="Luke Shay" />
		<meta property="og:title" content="Luke Shay" />
		<meta
			property="og:description"
			content="Software Development Engineer at Amazon Web Services that enjoys building cutting-edge web apps with new technologies."
		/>
		<meta property="og:image" content="https://www.gravatar.com/avatar/c57099d7997c3af5a04728e920d8e243.png?s=2048" />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://www.lukeshay.com/" />
		<meta name="robots" content="index, follow" />
		<meta
			name="keywords"
			content="Luke Shay, Software, Software Engineer, Development, JavaScript, TypeScript, Deno, AWS, Amazon Web Services, GCP, Google Cloud Platform"
		/>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="bg-slate-100 dark:bg-slate-900/[0.98]">
			<div class="max-w-6xl w-full pt-6 pb-16 bg-white dark:bg-slate-900 mx-auto min-h-screen">
				<Navbar>
					<ThemeToggle />
				</Navbar>
				<MobileNav>
					<ThemeToggle class="ml-2" />
				</MobileNav>
				<div class="max-w-2xl w-full pt-16 mx-auto px-6">
					<slot />
				</div>
			</div>
		</div>
	</body>
</html>

<script>
	if (localStorage.getItem("theme") === "dark") {
		document.body.classList.add("dark");
	} else {
		document.body.classList.add("remove");
	}
</script>
